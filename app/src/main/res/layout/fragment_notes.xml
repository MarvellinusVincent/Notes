<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <!-- Data binding variable to connect layout with ViewModel -->
        <variable
            name="viewModel"
            type="com.example.notes.NotesViewModel" />
    </data>
    <!-- Root layout: A vertical LinearLayout for displaying notes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".NotesFragment">
        <!-- Toolbar for displaying the app title and actions -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Notes"
            app:titleTextColor="#FFFFFF"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
            <!-- Button to navigate to sign-in -->
            <ImageButton
                android:id="@+id/userButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user"
                android:layout_gravity="end"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> viewModel.navigateToSignIn()}"/>
            <!-- Button to add a new note -->
            <ImageButton
                android:id="@+id/addNoteButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/add_note"
                android:layout_gravity="end"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> viewModel.onNewNoteClicked()}"/>
        </androidx.appcompat.widget.Toolbar>
        <!-- RecyclerView to display a list of notes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_of_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="2"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:clipToPadding="false"
            android:padding="5dp" />
    </LinearLayout>
</layout>
